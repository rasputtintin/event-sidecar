{
  "name": "event-sidecar",
  "description": "Event Sidecar is used to route and events to Kafka",
  "version": "8.7.3",
  "author": "ModusBox",
  "contributors": [
    "Rajiv Mothilal <rajiv.mothilal@modusbox.com>",
    "Valentin Genev <valentin.genev@modusbox.com>",
    "Miguel de Barros <miguel.debarros@modusbox.com"
  ],
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git://github.com/mojaloop/event-sidecar.git"
  },
  "bugs": "http://github.com/mojaloop/event-sidecar/issues",
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "ava": {
    "files": [
      "test/unit/**/**.test.js"
    ],
    "sources": [
      "src/**/*.js"
    ]
  },
  "dependencies": {
    "@hapi/address": "3.2.2",
    "@hapi/boom": "8.0.1",
    "@hapi/good": "8.2.4",
    "@hapi/hapi": "18.4.0",
    "@hapi/inert": "5.2.2",
    "@hapi/vision": "5.5.4",
    "@mojaloop/central-services-logger": "8.6.0",
    "@mojaloop/central-services-metrics": "8.3.0",
    "@mojaloop/central-services-stream": "8.7.2",
    "@mojaloop/event-sdk": "8.6.2",
    "blipp": "4.0.1",
    "glob": "7.1.6",
    "hapi-openapi": "1.2.6",
    "hapi-swagger": "11.1.0",
    "mustache": "3.2.0",
    "uuid4": "1.1.4",
    "snyk": "^1.316.1"
  },
  "devDependencies": {
    "ava": "2.4.0",
    "get-port": "5.1.0",
    "npm-audit-resolver": "2.1.0",
    "npm-check-updates": "4.0.1",
    "nyc": "14.1.1",
    "proxyquire": "2.1.3",
    "rewire": "4.0.1",
    "sinon": "7.5.0",
    "standard": "14.3.1",
    "swagmock": "1.0.0"
  },
  "pre-commit": [
    "dep:check",
    "standard",
    "test"
  ],
  "scripts": {
    "start": "node src/index.js server --api",
    "test": "npx ava test/unit/**/*.test.js",
    "cover": "npx nyc --all report --reporter=lcov npm run test",
    "test:coverage": "nyc ava",
    "standard": "standard",
    "pre-commit": "1.2.2",
    "regenerate": "yo swaggerize:test --framework hapi --apiPath './src/interface/swagger.json'",
    "dep:check": "npx ncu -e 2",
    "dep:update": "npx ncu -u",
    "audit:resolve": "SHELL=sh resolve-audit",
    "audit:check": "SHELL=sh check-audit",
    "snyk-protect": "snyk protect",
    "prepare": "npm run snyk-protect"
  },
  "generator-swaggerize": {
    "version": "4.1.0"
  },
  "main": "./src/server",
  "snyk": true
}
