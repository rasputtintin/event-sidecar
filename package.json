{
    "name": "event-sidecar",
    "description": "Event Sidecar is used to route and events to Kafka",
    "version": "8.1.0",
    "author": "ModusBox",
    "contributors": [
        "Rajiv Mothilal <rajiv.mothilal@modusbox.com>",
        "Valentin Genev <valentin.genev@modusbox.com>",
        "Miguel de Barros <miguel.debarros@modusbox.com"
    ],
    "license": "Apache-2.0",
    "repository": {
        "type": "git",
        "url": "git://github.com/mojaloop/event-sidecar.git"
    },
    "bugs": "http://github.com/mojaloop/event-sidecar/issues",
    "publishConfig": {
        "registry": "https://registry.npmjs.org"
    },
    "ava": {
        "files": [
            "test/unit/**/**.test.js"
        ],
        "sources": [
            "src/**/*.js"
        ]
    },
    "dependencies": {
        "@hapi/address": "2.1.1",
        "@hapi/boom": "7.4.3",
        "@hapi/good": "8.2.2",
        "@hapi/hapi": "18.3.2",
        "@hapi/inert": "5.2.2",
        "@hapi/vision": "5.5.4",
        "@mojaloop/central-services-logger": "8.1.1",
        "@mojaloop/central-services-metrics": "5.2.0",
        "@mojaloop/central-services-stream": "8.1.0",
        "@mojaloop/event-sdk": "8.1.0",
        "blipp": "4.0.1",
        "glob": "7.1.4",
        "hapi-openapi": "1.2.2",
        "hapi-swagger": "10.1.1",
        "mustache": "3.1.0",
        "uuid4": "1.1.4"
    },
    "devDependencies": {
        "ava": "2.4.0",
        "eslint": "6.4.0",
        "get-port": "5.0.0",
        "npm-check-updates": "3.1.23",
        "nyc": "14.1.1",
        "proxyquire": "2.1.3",
        "rewire": "4.0.1",
        "sinon": "7.4.2",
        "standard": "14.3.0",
        "swagmock": "1.0.0"
    },
    "pre-commit": [
        "dep:check",
        "lint",
        "test"
    ],
    "scripts": {
        "start": "node src/index.js server --api",
        "test": "npx ava test/unit/**/*.test.js",
        "cover": "npx nyc --all report --reporter=lcov npm run test",
        "test:coverage": "nyc ava",
        "lint": "eslint .",
        "pre-commit": "1.2.2",
        "regenerate": "yo swaggerize:test --framework hapi --apiPath './src/interface/swagger.json'",
        "dep:check": "npx ncu -e 2",
        "dep:update": "npx ncu -u"
    },
    "generator-swaggerize": {
        "version": "4.1.0"
    },
    "main": "./server"
}
